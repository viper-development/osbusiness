[default]
bears = LineCountBear, FilenameBear, InvalidLinkBear, coalaBear
files = **.md, **.html, **.js, **.css, **.yml
ignore = **.min.(css|js), _site/**.(html|js|css)
max_lines_per_file = 600

[markdown]
bears = MarkdownBear, SpaceConsistencyBear, KeywordBear
files = **.md
language = markdown
use_spaces = yes

[yaml]
bears = YAMLLintBear, SpaceConsistencyBear, LineLengthBear, KeywordBear
files = **.yml
language = YAML
use_spaces = yes

[javascript]
bears = JSComplexityBear
files = **.js
ignore = _site/**.js

[html]
bears = HTMLLintBear, BootLintBear, SpaceConsistencyBear, KeywordBear
files = **.html
ignore = _site/**.html, _includes/github.html
language = HTML
use_spaces = yeah

[css]
bears = SpaceConsistencyBear
files = **.css
ignore = _site/**.css, assets/bootstrap.min.css
use_spaces = yes
